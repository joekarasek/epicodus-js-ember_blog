{{#if editable}}
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=post.author}}
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=post.image}}
      </div>
      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body" placeholder=post.body}}
      </div>
      <button {{action 'update'}}>Save</button>
    </form>
{{else}}
  <button {{action 'showEdit'}}>Edit Post</button>
{{/if}}
