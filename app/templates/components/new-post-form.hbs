<h1>New Post</h1>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="body">Post Body</label>
      {{input value=body id="body"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <button {{action 'save'}}>Save</button> <!--This is the start to our Action up, this click starts the process of saving the new post to the data base. -->
  </form>
