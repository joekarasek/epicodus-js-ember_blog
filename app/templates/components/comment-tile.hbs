<h4>Comment by: {{comment.author}}</h4>
<p>{{comment.body}}</p>

{{#if editComment}}
    <form>
      <div class="form-group">
        <label for="commentAuthor">Author</label>
        {{input value=commentAuthor id="commentAuthor" placeholder=comment.author}}
      </div>

      <div class="form-group">
        <label for="body">Comment</label>
        {{input value=body id="body" placeholder=comment.body}}
      </div>

      <button {{action 'update' comment}}>Update</button>
    </form>
{{else}}
  <button {{action 'showUpdateForm'}}>Update Comment</button>
{{/if}}

<button {{action 'deleteComment' comment}} >Delete Comment</button>
